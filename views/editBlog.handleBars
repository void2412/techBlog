<div class="container">
	<form id="editPostForm" post-id="{{id}}">
		<div class="form-group">
			<label for="titleInput">Title</label>
			<input type="text" id="titleInput" class="form-control" value="{{title}}">
		</div>
		<div class="form-group">
			<label for="contentInput">Content</label>
			<textarea type="text" id="contentInput" class="form-control">{{content}}</textarea>
		</div>
		<button type="submit" class="btn btn-primary" id="editBtn">Edit Post</button>
		<button type="submit" class="btn btn-danger" id="deleteBtn">Delete Post</button>
	</form>
</div>

<script src="/js/editPost.js"></script>