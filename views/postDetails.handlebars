<div class="container">
	<div>
		<div class="row">
			<h1 class="col">{{title}}</h1>
			<p class="col-6 text-secondary align-bottom text-right">Posted by {{user.username}} on {{formatDate createdAt}}</p>
		</div>
		<p>{{content}}</p>
	</div>
	{{#each comments as |comment|}}
		{{#if (isEqual comment.user_id id)}}
			{{> commentCardHighlight}}
		{{else}}
			{{> commentCard}}
		{{/if}}
	{{/each}}
</div>

<div class="container">
	<div class="input-group">
		<textarea class="form-control" placeholder="Enter Comment Here"></textarea>
		<button class="btn btn-primary input-group-append" type="submit">Submit</button>
	</div>
</div>